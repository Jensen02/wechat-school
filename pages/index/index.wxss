.usermotto {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    width: 300px;
    /* height: 200px; */
    padding: 10px;
    margin: 0 auto;
    background-color: #fff;
    border-radius: 10px;
}
.banner {
    width: 320px;
    margin: 20px auto;
}
.select-item {
    display: flex;
    flex-direction: column;
    width: 65px;
    height: 65px;
    margin-bottom: 20px;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
}
.item-img {
    width: 40px;
    height: 40px;
}
.item-img image {
    width: 100%;
    height: 100%;
}
.item-text {
    font-size: 14px;
    text-align: center;
    margin-top: 5px;
    color: #999;
}